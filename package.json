{
  "name": "projet-blocus",
  "version": "2.0.0",
  "type": "module",
  "description": "Plateforme d'aide aux révisions pour étudiants avec IA",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/copy-pages.js",
    "preview": "vite preview",
    "build:css": "npx tailwindcss -i ./src/assets/styles/main.css -o ./dist/assets/css/style.css --minify",
    "deploy:netlify": "npm run build && netlify deploy --prod",
    "deploy:firebase": "firebase deploy --only hosting,firestore:rules,storage:rules",
    "deploy": "npm run build && npm run deploy:netlify && npm run deploy:firebase",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "optimize:images": "node scripts/optimize-images.js",
    "cap:sync": "npm run build && npx cap sync",
    "cap:android": "npx cap open android",
    "cap:ios": "npx cap open ios",
    "cap:run:android": "npm run cap:sync && npx cap run android",
    "cap:run:ios": "npm run cap:sync && npx cap run ios",
    "cap:update": "npx cap update",
    "android": "npm run cap:android",
    "ios": "npm run cap:ios"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.23",
    "cssnano": "^6.0.1",
    "dompurify": "^3.0.6",
    "eslint": "^8.56.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "sharp": "^0.33.1",
    "tailwindcss": "^3.4.1",
    "terser": "^5.26.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@capacitor/toast": "^8.0.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "firebase": "^10.7.1"
  }
}
